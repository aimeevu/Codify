<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:src="@drawable/compilebutton"
        android:id="@+id/question"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="80dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/question"
        android:id="@+id/layoutcompile">

        <Button
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:id="@+id/yesbutton"
            android:text="Yes"
            android:textColor="@color/colorBlack"
            android:background="@drawable/barbutton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:text="Compile?"
            android:id="@+id/textView" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/layoutno"
        android:layout_below="@+id/layoutcompile">

        <Button
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:id="@+id/nobutton"
            android:text="No"
            android:textColor="@color/colorBlack"
            android:background="@drawable/barbutton"
            android:onClick="noCompile"
            android:layout_marginTop="25dp"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/characterhead"
            android:layout_below="@+id/nobutton"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>
</RelativeLayout>